<!-- views/pages/userCard.ejs -->
<!DOCTYPE html>
<html>

<head>
    <% include ../Partials/head %>
</head>

<body>
    <header>
        <% include ../Partials/header %>
    </header>

    <main>
        <div class="card" style="width: 100%;">

            <img class="card-img-top" src="<%= professionId.url%>" alt="Card image cap" width="100%" height="500px">

            <div class="card-block">
                <h4 class="card-title"><%= professionId.name %></h4>
                <p class="card-text">Profession: <%= professionId.profession %></p>
                <p class="card-text">Mon site: <a href="#"><%= professionId.githubUrl %></a></p>

                <a href="#" class="btn btn-primary">Contactez moi</a>
            </div>
        </div>
    </main>

    <footer>
        <% include ../Partials/footer %>
    </footer>
</body>

</html>
