<!-- views/pages/userCard.ejs -->
<!DOCTYPE html>
<html>

<head>
    <% include ../Partials/head %>
</head>

<body>
    <header>
        <% include ../Partials/header %>
    </header>

    <main>
        <div class="card" style="width: 20rem;">

            <img class="card-img-top" src="<%= userId.url%>" alt="Card image cap" width="320px" height="300px">

            <div class="card-block">
                <h4 class="card-title"><%= userId.firstName %></h4>
                <p class="card-text">Je suis un apprenant full-stack-js a Simplon co. Je suis developpeur web junior. J'ai envie d'apprendre plus!</p>
                <a href="#" class="btn btn-primary">Decouvrez plus</a>
            </div>
        </div>
    </main>

    <footer>
        <% include ../Partials/footer %>
    </footer>
</body>

</html>
